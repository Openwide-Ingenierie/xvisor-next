#include "../imx6q.dtsi"

/ {
	#address-cells = <0x1>;
	#size-cells = <0x1>;
	model = "Freescale i.MX6 Quad SABRE Lite Board";
	compatible = "fsl,imx6q-sabrelite", "fsl,imx6q";

	memory {
		device_type = "memory";
		reg = <0x10000000 0x40000000>; /* 1 GB */
	};
};
